# ===================================
# SKILLSWAP PLATFORM - ENVIRONMENT VARIABLES
# ===================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ===================================
# SERVER CONFIGURATION
# ===================================
NODE_ENV=development
PORT=5000

# ===================================
# DATABASE CONFIGURATION
# ===================================
# Development MongoDB (local)
MONGODB_URI=mongodb://localhost:27017/skillswap

# Production MongoDB Atlas (get from MongoDB Atlas)
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster.xxxxx.mongodb.net/skillswap?retryWrites=true&w=majority

# ===================================
# JWT CONFIGURATION
# ===================================
# Generate secure secrets: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-use-64-chars
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# ===================================
# CLIENT CONFIGURATION
# ===================================
# Development
CLIENT_URL=http://localhost:5000

# Production (replace with your actual domain)
# CLIENT_URL=https://yourapp.com

# ===================================
# EMAIL CONFIGURATION (Optional - for password reset)
# ===================================
# For Gmail: Enable 2FA and create App Password at https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_EMAIL=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@skillswap.com
FROM_NAME=SkillSwap Platform

# ===================================
# ADMIN CONFIGURATION
# ===================================
# Admin panel is in /admin folder with separate .env file
# See admin/.env.admin for admin-specific settings

# ===================================
# SECURITY CONFIGURATION
# ===================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS allowed origins (comma-separated for multiple)
CORS_ORIGINS=http://localhost:5000,http://localhost:3000

# ===================================
# FILE UPLOAD CONFIGURATION (Future)
# ===================================
MAX_FILE_UPLOAD=10485760
FILE_UPLOAD_PATH=./uploads

# ===================================
# LOGGING CONFIGURATION
# ===================================
LOG_LEVEL=info
ENABLE_LOGGING=true

# ===================================
# DEPLOYMENT PLATFORM SPECIFIC
# ===================================
# These are usually auto-set by hosting platforms
# DATABASE_URL=       # Railway, Heroku auto-set
# MONGO_URL=          # Some platforms use this
